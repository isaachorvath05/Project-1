puts 'Hello, grandson, how are you today?'
bye_count = 0

while true
  reply = gets.chomp
  if reply == reply.downcase
    puts 'HUH! SPEAK UP, SONNY'
  elsif reply == reply.upcase
    puts 'NO, NOT SINCE 1938!'
  end
  if reply == 'bye bye bye' && bye_count < 1
    puts 'Goodbye, dear!'
    bye_count += 1
  elsif reply == 'bye'
    break
  end
end
